{
  "name": "Structure Relations Dev Environment",
  "image": "mcr.microsoft.com/vscode/devcontainers/anaconda:3",
  "postCreateCommand": "mkdir -p .vscode && cp -n .devcontainer/settings.json .vscode/settings.json && cp -n .devcontainer/DevCont.env .env && cp -n .devcontainer/StructureRelations_FULL.yml environment.yml && conda init && conda env create --name StructureRelations -f StructureRelations_FULL.yml",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance",
        "hbenl.vscode-test-explorer",
        "LittleFoxTeam.vscode-python-test-adapter",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-python.isort",
        "VisualStudioExptTeam.vscodeintellicode",
        "streetsidesoftware.code-spell-checker",
        "ms-python.pylint"
      ],
      "settings": {
        "python.envFile": "${workspaceFolder}/.env",
        "python.testing.pytestEnabled": true,
        "python.testing.nosetestsEnabled": false,
        "pythonTestExplorer.testFramework": "pytest"
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/conda:1": {
      "addCondaForge": true,
      "installMiniconda": true,
      "condaVersion": "latest"
    }
  }
}

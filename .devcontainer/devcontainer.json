{
  "name": "Structure Relations Dev Environment",
  "build": { 
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "conda config --set solver classic && conda init && conda env create --name StructureRelations -f StructureRelations_FULL.yml && conda activate StructureRelations",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance",
        "hbenl.vscode-test-explorer",
        "LittleFoxTeam.vscode-python-test-adapter",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-python.isort",
        "VisualStudioExptTeam.vscodeintellicode"
      ],
      "settings": {
        "python.testing.nosetestsEnabled": false
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/conda:1": {
      "addCondaForge": true,
      "installMiniconda": true,
      "condaVersion": "latest"
    }
  }
}